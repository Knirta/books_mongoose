{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Books app",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "This is a documentation of books app"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    },
    {
      "url": "https://example.com/api/v1"
    }
  ],
  "tags": [
    {
      "name": "Books",
      "description": "Operations about books."
    },
    {
      "name": "Auth",
      "description": "Auth operations."
    }
  ],
  "paths": {
    "/api/books": {
      "get": {
        "tags": [
          "Books"
        ],
        "summary": "Get list of books",
        "operationId": "getBooks",
        "description": "Get list of books with this endpoint",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer",
              "example": 1
            }
          },
          {
            "in": "query",
            "name": "perPage",
            "schema": {
              "type": "integer",
              "example": 10
            }
          },
          {
            "in": "query",
            "name": "sortBy",
            "schema": {
              "type": "string",
              "example": "title"
            },
            "description": "All book's fields can be mentioned. Default value - _id"
          },
          {
            "in": "query",
            "name": "sortOrder",
            "schema": {
              "type": "string",
              "enum": [
                "asc",
                "desc"
              ],
              "example": "asc"
            }
          },
          {
            "in": "query",
            "name": "genre",
            "schema": {
              "type": "string",
              "enum": [
                "fantastic",
                "love",
                "detective",
                "history"
              ],
              "example": "fantastic"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully found books!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully found books!"
                    },
                    "data": {
                      "type": "object",
                      "required": [
                        "data",
                        "page",
                        "perPage",
                        "totalItems",
                        "totalPages",
                        "hasNextPage",
                        "hasPreviousPage"
                      ],
                      "properties": {
                        "data": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/book"
                          }
                        },
                        "page": {
                          "type": "number",
                          "example": 2
                        },
                        "perPage": {
                          "type": "number",
                          "example": 4
                        },
                        "totalItems": {
                          "type": "number",
                          "example": 4
                        },
                        "totalPages": {
                          "type": "number",
                          "example": 4
                        },
                        "hasNextPage": {
                          "type": "boolean",
                          "example": false
                        },
                        "hasPreviousPage": {
                          "type": "boolean",
                          "example": true
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      },
      "post": {
        "tags": [
          "Books"
        ],
        "summary": "Create book",
        "operationId": "createBook",
        "description": "Create a book with payload",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "title",
                  "author",
                  "genre",
                  "date",
                  "owner"
                ],
                "properties": {
                  "title": {
                    "description": "Book's title",
                    "type": "string",
                    "example": "Magic Book"
                  },
                  "author": {
                    "description": "Book's author",
                    "type": "string",
                    "example": "John Doe"
                  },
                  "genre": {
                    "description": "Book's genre",
                    "type": "string",
                    "enum": [
                      "fantastic",
                      "love",
                      "detective",
                      "history"
                    ]
                  },
                  "date": {
                    "description": "Book's date",
                    "type": "string",
                    "example": "2023-10-10"
                  },
                  "favorite": {
                    "description": "Is book favorite",
                    "type": "boolean",
                    "example": false
                  },
                  "owner": {
                    "description": "Book's owner id",
                    "type": "string",
                    "example": "65e4decdd286b30065d54af9"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Creates a book",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully created a book!"
                    },
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/book"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/api/books/{id}": {
      "get": {
        "tags": [
          "Books"
        ],
        "summary": "Get book by id",
        "operationId": "getBook",
        "description": "Get book by id",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "65ca67e7ae7f10c88b598384"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get book by id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully found book with id 65ca67e7ae7f10c88b598384!"
                    },
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/book"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "book": {
        "type": "object",
        "required": [
          "_id",
          "title",
          "author",
          "genre",
          "date",
          "owner"
        ],
        "properties": {
          "_id": {
            "description": "Book's id",
            "type": "string",
            "example": "6967eb7d74f5e8288d22e3be"
          },
          "title": {
            "description": "Book's title",
            "type": "string",
            "example": "Magic Book"
          },
          "author": {
            "description": "Book's author",
            "type": "string",
            "example": "John Doe"
          },
          "favorite": {
            "description": "Is book favorite",
            "type": "boolean",
            "example": false
          },
          "genre": {
            "description": "Book's genre",
            "type": "string",
            "enum": [
              "fantastic",
              "love",
              "detective",
              "history"
            ]
          },
          "date": {
            "description": "Book's date",
            "type": "string",
            "example": "2023-10-10"
          },
          "owner": {
            "description": "Book's owner id",
            "type": "string",
            "example": "65e4decdd286b30065d54af9"
          }
        }
      }
    },
    "responses": {
      "401": {
        "description": "Unauthorized error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 401
                },
                "message": {
                  "type": "string",
                  "example": "UnauthorizedError"
                },
                "data": {
                  "type": "object",
                  "required": [
                    "message"
                  ],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Access token expired"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}